<UserControl x:Class="Flowchart_Framework.View.InPort"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flowchart_Framework.View" 
             mc:Ignorable="d" Width="20" Height="20">
    <Grid Width="20" Height="20" x:Name="Grid"
          MouseLeftButtonDown="Port_LeftMouseDown" MouseRightButtonDown="Grid_MouseRightButtonDown">
        <Ellipse HorizontalAlignment="Stretch" Height="20" Stroke="Black" VerticalAlignment="Stretch" Width="20" Fill="White"/>

    </Grid>
</UserControl>
