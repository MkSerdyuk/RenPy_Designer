<UserControl x:Class="Flowchart_Framework.View.Block"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flowchart_Framework.View"
             mc:Ignorable="d" 
             d:DesignHeight="67" d:DesignWidth="200" Background="#FF717070" MinWidth="100" MaxWidth="200"
             MouseDown="UserControl_MouseDoubleClick" PreviewMouseMove="UserControl_PreviewMouseMove" MouseMove="UserControl_PreviewMouseMove" MouseUp="UserControl_MouseUp">
    <Grid x:Name="_mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

    </Grid>
</UserControl>
